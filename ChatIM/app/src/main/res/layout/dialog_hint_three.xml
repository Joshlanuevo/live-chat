<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_80"
    android:layout_marginRight="@dimen/dp_80"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_172"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_dialog_clear_cache"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/llAdmin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_admin"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_setting_admin" />

            <TextView
                android:id="@+id/tv_Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/iv_admin"
                android:text="@string/jingshengweiguanliyuan"
                android:textColor="@color/text_main"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_17"
                android:background="@color/line_gray" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/llMute"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_mute"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:padding="@dimen/dp_1"
                android:src="@drawable/ic_setting_mute" />

            <TextView
                android:id="@+id/tv_Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/iv_mute"
                android:gravity="center"
                android:text="@string/jinyan"
                android:textColor="@color/text_main"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:id="@+id/llRemove"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_36"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_remove"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:src="@drawable/ic_setting_remove" />

            <TextView
                android:id="@+id/tv_Title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_toRightOf="@+id/iv_remove"
                android:gravity="center"
                android:text="@string/congqunzuzhongyichu"
                android:textColor="@color/text_main"
                android:textSize="14dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
