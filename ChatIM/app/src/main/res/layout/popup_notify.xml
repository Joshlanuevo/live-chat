<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dp_155"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_6">

        <LinearLayout
            android:layout_width="@dimen/dp_155"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5">

            <TextView
                android:id="@+id/tvNotifyDel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/ic_pup_del"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:text="@string/shanchuxiaoxi"
                android:textColor="#333333"
                android:textSize="15sp" />

            <View
                android:id="@+id/vGroupChat"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/color_eeeeee" />

            <TextView
                android:id="@+id/tvNotifyEdit"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_pup_edit"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_25"
                android:text="@string/duoxuanxiaoxi"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="9dp"
        android:layout_height="6dp"
        android:layout_marginLeft="125dp"
        android:elevation="@dimen/dp_4"
        android:src="@drawable/ic_pup_bg_top_key" />
</FrameLayout>