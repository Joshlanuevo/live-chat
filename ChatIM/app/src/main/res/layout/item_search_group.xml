<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10">

    <include
        android:id="@+id/layout_header"
        layout="@layout/layout_header"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_mine_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constrainedWidth="true">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:singleLine="true"
            android:text="Abbie HigginsAbbieAbbie HigginsAbbie HigginsAbbie HigginsAbbie Higgins"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="14dp"
            tools:text="Look,i want to work for today...Look,i want to work for today...Look,i want to work for today..." />
    </LinearLayout>

</LinearLayout>

