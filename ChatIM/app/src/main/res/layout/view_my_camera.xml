<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="MissingDefaultResource,MissingPrefix">

    <SurfaceView
        android:id="@+id/preview_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.uuzuche.lib_zxing.view.ViewfinderView
        android:id="@+id/viewfinder_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:inner_corner_color="@color/color_main"
        app:inner_corner_length="30dp"
        app:inner_corner_width="2dp"
        app:inner_height="206dp"
        app:inner_scan_bitmap="@drawable/ic_qr_code"
        app:inner_scan_iscircle="true"
        app:inner_scan_speed="50"
        app:inner_width="200dp" />

</FrameLayout>